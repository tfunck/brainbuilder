Bootstrap: docker
From: ubuntu:18.04

%post

apt update

apt install -y git vim cmake python3 python3-dev python3-distutils python3-pip libsm6 libxrender-dev

pip3 install h5py tensorflow imageio keras pandas matplotlib nibabel numpy opencv-python sklearn scikit-image scipy seaborn statsmodels opencv-python webcolors

%environment
export PATH=/opt/bin:$PATH

%runscript

