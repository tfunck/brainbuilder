Bootstrap: docker
From: ubuntu:18.04

%post

apt update

apt install -y  git vim cmake python3 python3-dev python3-distutils python3-pip libsm6 libxrender-dev

pip3 install h5py tensorflow imageio keras pandas matplotlib nibabel numpy opencv-python sklearn scikit-image scipy seaborn statsmodels 

cd /opt
git clone https://github.com/ANTsX/ANTsPy
cd ANTsPy
python3 setup.py install
cd ..
rm -r ANTsPy

%environment
%export LC_ALL=C
%export PATH=/usr/games:$PATH

%runscript

